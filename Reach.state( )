<!DOCTYPE html>
<html>
  <head>
    <title> . </title>
  </head>

  <body>


    <div class="js-container"></div>
        
    <script src="https://unpkg.com/supersimpledev/react.js"></script>
    <script src="https://unpkg.com/supersimpledev/react-dom.js"></script>
    <script src="https://unpkg.com/supersimpledev/babel.js"></script>
    <script type="text/babel">
   
   //Creating ChatInput component
    function ChatInput(){
      return(
        <>
          <input
              placeholder="Send a message to Chatbot"
              size="20"
            />
          <button>Send</button>
        </>
      );

    }
    //Creating ChatMessage component
    function ChatMessage({message, sender}){
   
      return(
        <div>
          {sender ==='robot' && <img src="images/robot.png" width="50"/>}
          {message}
          {sender === 'user' && <img src="images/user.png" width="50"/>}

        </div>
      );
      
    }

    // Creating App component

    function ChatMessages(){ 
      const array = React.useState([{
          message: 'hello chatbot',
          sender: 'user',
          id: 'id1'
        }, {
          message: 'Hello! How can I help you?',
          sender: 'robot',
          id: 'id2'
        }, {
          message: 'What is todays date?',
          sender: 'user',
          id: 'id3'
        }, {
          message: 'Todays date is December 31',
          sender: 'robot',
          id: 'id4'
        }]
      );
      //React.state() gives current data and updator function
/*      const chatMessages = array[0];   //tcurrent data. 
      const setChatMessages = array[1]; //updator function  */
     const [chatMessages, setChatMessages] = array;

      //clearly, we can use array destructuring shortcut
      // as shown in the next script.  
      function sendMessage(){
        setChatMessages([               //updator function
          ...chatMessages,               //... is a spread operator: it copies the chat messages into this new array.
          {
            message: 'test',
            sender: 'user',
            id: crypto.randomUUID()
          }
        ]);                             //updator function replaces the entire chatMessages array with a new array
         
      }
      return(
          <>
            <button onClick={sendMessage}> Send message </button>

            {chatMessages.map((chatMessage) => {
              return(
                <ChatMessage 
                  message = {chatMessage.message}
                  sender = {chatMessage.sender}
                  key = {chatMessage.id}
                />
              );

            })}
        </>
      )

    }
   
    function App(){
      return (
        <>
          <ChatInput />
          <ChatMessages />
        </>
      );

    }

    // Rendering the component:
      const container = document.querySelector('.js-container'); 
      ReactDOM.createRoot(container).render(<App />);

    </script>

  </body>
</html>
